@page
@model IndexModel


<br />
<div class="container row p-0 m-0">
    <div class="col-10">
        <h2 class="text-info">Todo List</h2>

    </div>
    <div class="col-2">
        <a asp-page="/TodoInfo/create" class="btn btn-info form-control text-white">Create Todo</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.info.Count() > 0)
            {
                <table id="todolist" class="table table-striped border">
                    <thead>
                        <tr class="table-secondary">
                            <th>
                                <label asp-for="info.FirstOrDefault().Content"></label>
                            </th>
                            <th><label>Action</label></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.info)
                        {
                            <tr>
                                <td>
                                    @*@Html.DisplayFor(m => item.Name)*@
                                    @item.Content
                                </td>
                                <td>
                                    <button asp-page-handler="Delete" asp-route-Id="@item.Id" onclick="return confirm('Are you sure you want to delete the item?')" class="btn btn-danger btn-sm text-white">Delete</button>
                                    <a asp-page="/TodoInfo/edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>NO CONTENT AVAILABLE.</p>
            }

        </form>
    </div>

   
    
</div>
@section Scripts{

    <script src="~/js/todoJs.js"></script>
}
